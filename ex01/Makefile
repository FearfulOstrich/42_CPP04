#==============================================================================#
#..............................................................................#
#...............................DECLARATIONS...................................#
#..............................................................................#
#==============================================================================#

## Compilation

NAME	=	thoughts

CC		=	clang++

FLAGS	=	-Wall -Wextra -Werror -std=c++98

## Sources

SRCDIR	=

SRCFILE	=	main.cpp Animal.cpp Cat.cpp Dog.cpp Brain.cpp

SRC		=	$(addprefix $(SRCDIR), $(SRCFILE))

## Objects

OBJDIR	=

OBJ		=	$(subst $(SRCDIR), $(OBJDIR), $(SRC:.cpp=.o))

#==============================================================================#
#..............................................................................#
#....................................RULES.....................................#
#..............................................................................#
#==============================================================================#

all			:	$(NAME)

$(NAME)		:	$(OBJ)
				$(CC) $(OBJ) -o $(NAME)

$(OBJDIR)%.o:	$(SRCDIR)%.cpp
				$(CC) $(FLAGS) -c $< -o $@

clean		:
				rm -rf $(OBJ)

fclean		:	clean
				rm -rf $(NAME)

re			:	fclean all

.PHONY		:	all clean fclean re
